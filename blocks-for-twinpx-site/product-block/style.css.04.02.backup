.twpxProductBlock .landing-block-node-product-blocks-container {
  --cols: 2;
  --gap-hor: 16px;
  --gap-ver: 16px;
  display: grid;
  column-gap: var(--gap-hor);
  row-gap: var(--gap-ver);
}
.twpxProductBlock .landing-block-node-product-block {
  --gap-hor-card: 16px;
  --gap-ver-card: 16px;
  display: grid;
  column-gap: var(--gap-hor-card);
  row-gap: var(--gap-ver-card);
}
.twpxProductBlock .landing-block-node-product-block-price {
  display: grid;
  row-gap: var(--gap-ver-card);
}
.landing-block-node-product-block-button-block a {
  display: block;
  margin-top: var(--gap-ver-card);
  text-align: center;
}

@media (min-width: 768px) {
  .twpxProductBlock .landing-block-node-product-blocks-container {
    grid-template-columns: repeat(
      var(--cols),
      calc((100% - var(--gap-hor) * (var(--cols) - 1)) / var(--cols))
    );
  }
  .twpxProductBlock .landing-block-node-product-block {
    grid-template-columns: calc(50% - var(--gap-hor-card) / 2) calc(
        50% - var(--gap-hor-card) / 2
      );
  }
  .twpxProductBlock .landing-block-node-product-block h2 {
    grid-column: 1 / 3;
    grid-row: 1;
    margin: 0;
  }
  .twpxProductBlock .landing-block-node-product-block-text-sub {
    grid-column: 1 / 3;
  }
  .twpxProductBlock .landing-block-node-product-block-button-block {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  .twpxProductBlock .landing-block-node-product-block-button-block a {
    margin-top: 0;
  }
}

